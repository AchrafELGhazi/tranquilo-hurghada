                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.status === 201) {",
                                    "    const response = pm.response.json();",
                                    "    if (response.data && response.data.id) {",
                                    "        pm.collectionVariables.set('booking_id', response.data.id);",
                                    "        console.log('Booking ID saved:', response.data.id);",
                                    "    }",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "bearer",
                            "bearer": [
                                {
                                    "key": "token",
                                    "value": "{{auth_token}}",
                                    "type": "string"
                                }
                            ]
                        },
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"villaId\": \"{{villa_id}}\",\n    \"checkIn\": \"2024-12-01T15:00:00.000Z\",\n    \"checkOut\": \"2024-12-07T11:00:00.000Z\",\n    \"totalGuests\": 4,\n    \"paymentMethod\": \"BANK_TRANSFER\",\n    \"notes\": \"Special request: Late check-in expected\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/bookings",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "bookings"
                            ]
                        },
                        "description": "Create a new booking for a villa"
                    },
                    "response": []
